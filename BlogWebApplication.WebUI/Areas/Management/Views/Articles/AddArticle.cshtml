@{
    ViewData["Title"] = "Makale Ekle";
}
@model ArticleCreateViewModel

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makaleleler /</span> Makale Oluşturma</h4>

    <div class="row">

        <div class="col-md-6">
            <div class="card mb-4">
                <h5 class="card-header">Makale Oluşturma Formu</h5>
                <form asp-area="Management" asp-controller="Articles" asp-action="AddArticle" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">Başlık</label>
                            <input asp-for="Title" type="text"
                                   class="form-control"
                        
                                   placeholder="John Doe"
                                   aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">İçerik</label>
                            <textarea asp-for="Content"
                                      class="form-control"
                                 
                                      placeholder="John Doe"
                                      aria-describedby="defaultFormControlHelp"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">Kategoriler</label>
                            <select  class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Photo" for="defaultFormControlInput" class="form-label">Resim Seç</label>
                            <input asp-for="Photo" type="file"
                                   class="form-control"
                                 
                                   placeholder="Yüklenecek Resim Seçiniz."
                                   aria-describedby="defaultFormControlHelp" accept="image/*" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-sm btn-success" type="submit">Oluştur</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>