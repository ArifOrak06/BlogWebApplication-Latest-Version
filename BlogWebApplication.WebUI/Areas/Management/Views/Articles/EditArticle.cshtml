@{
    ViewData["Title"] = "Makale Düzenleme";
}
@model ArticleUpdateViewModel

@* <div class="container-xxl flex-grow-1 container-p-y"> *@
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a class="link" href="/Management/Articles">Makaleleler</a> /</span> Makale Düzenleme</h4>

    <div class="row">

        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Makale Düzenleme Formu</h5>
                <form asp-area="Management" asp-controller="Articles" asp-action="EditArticle" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">Başlık</label>
                            <input asp-for="Title" type="text"
                                   class="form-control"
                                   placeholder="Başlık bilgisi giriniz..."
                                   aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div> 
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">İçerik</label>
                            <textarea asp-for="Content"
                                      class="form-control"
                                      placeholder="İçerik ekleyiniz..."
                                      aria-describedby="defaultFormControlHelp"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Category.Name" class="form-label">Mevcut Kategori</label>
                            <input disabled type="text" asp-for="Category.Name"/>
                        </div>
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">Kategoriler</label>
                            <select  class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="Img" class="form-label">Mevcut Resim</label>
                                    <img src="~/pictures/@Model.Img.FileName" alt="Mevcut Resim" class="img-thumbnail" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Photo" for="defaultFormControlInput" class="form-label">Resim Seç</label>
                                    <input asp-for="Photo" type="file"
                                           class="form-control"
                                           placeholder="Yüklenecek Resim Seçiniz."
                                           aria-describedby="defaultFormControlHelp" accept="image/*" />
                                    <span asp-validation-for="Photo" class="text-danger"></span>
                                </div>
                            </div>
                            
                        </div>

                        <div class="form-group">
                            <label asp-for="IsActive">Makale Yayınlansın mı ? </label>
                            <input type="checkbox" asp-for="IsActive" class="form-check" />
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-sm btn-success" type="submit">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
@* </div> *@