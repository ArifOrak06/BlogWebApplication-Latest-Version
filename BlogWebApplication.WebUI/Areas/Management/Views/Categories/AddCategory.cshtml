@{
    ViewData["Title"] = "Kategori Ekleme";
}
@model CategoryCreateViewModel


<div class="card mb-4">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a class="link" href="/Management/Categories">Aktif Kategoriler</a> /</span> Kategori Oluşturma</h4>
    <h5 class="card-header">Kategori Oluşturma Formu</h5>
    <form asp-area="Management" asp-controller="Categories" asp-action="AddCategory" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="card-body">
            <div class="form-group">
                <label for="defaultFormControlInput" class="form-label">Başlık</label>
                <input asp-for="Name" type="text"
                       class="form-control"
                       placeholder="Kategori adını giriniz..."
                       aria-describedby="defaultFormControlHelp" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>
        <div>
            <button class="btn btn-sm btn-success" type="submit">Oluştur</button>
        </div>
    </form>
</div>
