@{
    ViewData["Title"] = "Kategoriler";
}
@model List<CategoryViewModel>

<div class="container">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a class="link" href="/Management/Categories">Aktif Kategoriler</a> /</span> Kategori Oluşturma</h4>
    <h1 class="mt-4"> Aktif Kategoriler</h1>
    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["StatusMessage"]
        </div>
    }

    <a href="@Url.Action("AddCategory", "Categories", new { area = "Management" })" class="btn btn-primary mb-3">Yeni Kategori Ekle</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Kategori Adı</th>
                <th>Kategoriyi Oluşturan</th>
                <th>Oluşturulma Tarihi</th>
                <th>Durumu</th>
                <th>Kategori Güncellenme Tarihi</th>
                <th>Kategori Güncelleyen</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.CreatedBy</td>
                    <td>@category.CreatedDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="text-@(category.IsActive ? "success" : "warning")">@(category.IsActive ? "Aktif" : "Pasif")</span>
                    </td>
                    <td>@category.ModifiedDate.ToString("dd/MM/yyyy")</td>
                    <td>@category.ModifiedBy</td>
                    <td>
                        <a asp-area="Management" asp-controller="Categories" asp-action="EditCategory" asp-route-categoryId="@category.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        @{
                            if (User.IsInRole("SUPER ADMİN"))
                            {
                                <a asp-area="Management" asp-controller="Categories" asp-action="SoftDeleteCategory" asp-route-categoryId="@category.Id" class="btn btn-sm btn-danger">Sil</a>
                            }

                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>