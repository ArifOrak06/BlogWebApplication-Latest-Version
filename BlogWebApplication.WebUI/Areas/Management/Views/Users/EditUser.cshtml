@{
    ViewData["Title"] = "Kullanıcı Güncelleme";
}
@model AppUserEditViewModel
<div class="row">

    <div class="col-md-6 offset-md-2">

        <h3>Kullanıcı Bilgileri Güncelleme Formu</h3>
        <hr />
@* 
        @if (TempData["StatusMessage"] != null)
        {
            <div class="alert alert-success" role="alert"> @TempData["StatusMessage"]</div>
        } *@

        <div class="alert alert-danger" asp-validation-summary="ModelOnly" role="alert"></div>
        <form asp-controller="Users" asp-action="EditUser" method="post" enctype="multipart/form-data">



            <div class="mb-3">
                <label asp-for="UserName" for="exampleInputPassword1" class="form-label"></label>
                <input asp-for="UserName" type="text" class="form-control">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" for="exampleInputPassword1" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" for="exampleInputPassword1" class="form-label"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Img" class="form-label">Mevcut Resim</label>
                        <img src="~/pictures/@Model.Img.FileName" alt="Mevcut Resim" class="img-thumbnail" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Photo" for="defaultFormControlInput" class="form-label">Resim Seç</label>
                        <input asp-for="Photo" type="file"
                               class="form-control"
                               placeholder="Yüklenecek Resim Seçiniz."
                               aria-describedby="defaultFormControlHelp" accept="image/*" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                </div>

            </div>
         
            <div class="row mb-3">
                <div class="col-md-8 offset-md-4">

                    <button type="submit" class="btn btn-primary">Kaydet</button>

                </div>
            </div>

        </form>
    </div>

</div>