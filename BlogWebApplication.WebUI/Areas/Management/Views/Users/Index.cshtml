@{
    ViewData["Title"] = "Kullanıcılar";
}
@model List<AppUserViewModel>

<div class="container">

    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["StatusMessage"]
        </div>
    }

    <a href="@Url.Action("AddUser", "Users", new { area = "Management" })" class="btn btn-primary mb-3">Yeni Kullanıcı Ekle</a>
    <table class="table table-hover">
        <thead>
            <tr>

                <th>Kullanıcı Adı</th>
                <th>GSM</th>
                <th>Email</th>
                <th>Rolü</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appUser in Model)
            {
                <tr>

                    <td>@appUser.UserName</td>
                    <td>@appUser.PhoneNumber</td>
                    <td>@appUser.Email</td>
                    <td><user-role-name user-id="@appUser.Id"></user-role-name>
                    <td>
                        <a asp-area="Management" asp-controller="Users" asp-action="EditUser" asp-route-appUserId="@appUser.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        @{
                            if (User.IsInRole("SUPER ADMİN"))
                            {

                                <a asp-area="Management" asp-controller="Users" asp-action="DeleteUser" asp-route-appUserId="@appUser.Id" class="btn btn-sm btn-danger">Sil</a>
                                <a asp-area="Management" asp-controller="Roles" asp-action="AssignRoleToAppUser" asp-route-userId="@appUser.Id" class="btn btn-sm btn-primary">Role Ata</a>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>